/// US STATES GAME //
import turtle
import pandas

# Screen and Image
screen = turtle.Screen()
screen.title("U.S. States Game")
image = "blank_states_img.gif"
screen.addshape(image)
turtle.shape(image)
screen.tracer(0)

def cor_guess(x , y , state):
    tim = turtle.Turtle()
    tim.hideturtle()
    tim.penup()
    tim.goto(x,y)
    tim.write(state)
    screen.update()



#Getting hold of csv
data = pandas.read_csv("50_states.csv")

#Tracking User Guess
correct_guess = 0
guessed_states = []

is_game_on = True
while is_game_on:
    answer_state = screen.textinput(title=f"{correct_guess}/50 Correct" , prompt="What's another state name?").title()
    for states in data.state:
        if answer_state == states and answer_state not in guessed_states:
            guessed_states.append(states)
            correct_guess += 1
            state = data[data.state == answer_state]
            state_x = int(state.x.item())
            state_y = int(state.y.item())
            cor_guess(state_x , state_y , answer_state)

            if correct_guess == 50:
                is_game_on = False

screen.exitonclick()
